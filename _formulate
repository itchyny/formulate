#compdef formulate

_formulate()
{
  local -a _commands

  _arguments -C \
    '1: :->cmds' \
    '*:: :->args' \
    && ret=0

  case $state in

    (cmds)
      _commands=(
        "create:Creates a new formula"
        "update:Updates a formula"
      )
      _describe -t commands 'commands' _commands && ret=0
      ;;

    (args)
      case $words[1] in
        (update)
          _files && ret=0
          ;;
        (*)
          _nothing
          ;;
      esac
      ;;

  esac
}
